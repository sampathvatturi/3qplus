<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.spgon.a3flowers.activity.LaunchScreen">

    <ImageView
        android:id="@+id/launch_logo"
        android:layout_width="244dp"
        android:layout_height="101dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/newsplashh"
        app:layout_constraintBottom_toTopOf="@+id/launch_image"
        app:layout_constraintEnd_toEndOf="@+id/bottm_sec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/launch_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/launch_screen"
        app:layout_constraintTop_toBottomOf="@+id/launch_logo"
        tools:layout_editor_absoluteX="13dp" />


    <LinearLayout
        android:id="@+id/bottm_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9EAFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="WELCOME"
            android:textColor="@color/black" />


        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START YOUR JOURNEY"
            android:textColor="@color/black" />


        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#00A08F"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#FFF"
            android:text="LOGIN"
            android:onClick="loginClick"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="SignupClick"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>