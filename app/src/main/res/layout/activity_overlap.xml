<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#B2000000"
    tools:context="com.spgon.a3flowers.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBarParent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/purple_200"
        android:backgroundTint="#EFEBEB"
        android:visibility="invisible"
        app:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            app:menu="@menu/top_app_bar"
            app:title="Welcome"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/topAppBarParent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="118dp"
                android:layout_height="118dp">

                <ProgressBar
                    android:id="@+id/circleTimer"
                    style="@style/CircularDeterminateProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="20"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/rounded_cornor_textview"
                android:backgroundTint="#764CDB"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:text="Day 1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/demo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@drawable/rounded_cornor_textview"
                android:backgroundTint="#764CDB"
                android:clickable="true"
                android:onClick="demo"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:text="Demo"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">



                <ImageView
                    android:id="@+id/breath_img"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/breath_img" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/breathe_in"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="Breath in, swipe to increase your count"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/rectangle_5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/swipe" />
            </LinearLayout>


        </FrameLayout>
        <Button
            android:id="@+id/okaybutton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button3"
            android:backgroundTint="#59191818"
            android:gravity="center_horizontal|center_vertical"
            android:text="GOT IT"
            android:textColor="@color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:background="@drawable/bg_circle">

                <TextView
                    android:id="@+id/breath_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="20dp"
                    android:text="Breath Count"
                    android:textSize="12sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:background="@drawable/bg_circle">

                <TextView
                    android:id="@+id/swipe_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="20dp"
                    android:text="Swipe Count"
                    android:textSize="12sp" />

            </FrameLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/start_stop"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="@drawable/rounded_cornor_textview"
            android:backgroundTint="#00A08F"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="start_stop"
            android:paddingHorizontal="30dp"
            android:text="@string/btn_start_txt"
            android:textColor="#fff" />

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.MaterialComponents.BottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:background="#FFF"

        app:itemIconTint="@color/teal_200"
        app:itemRippleColor="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>