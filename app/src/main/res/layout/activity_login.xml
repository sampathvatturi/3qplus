<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E5FA"
    tools:context="com.spgon.a3flowers.activity.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/half_circle_background" /> <!-- Set your desired background color -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Enter Phone Number"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:orientation="vertical"
            android:padding="20dp">


            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="number"
                android:digits="0123456789"
                android:textAlignment="center"
                android:maxLength="10"
                android:nextFocusRight="@id/name" />


            <TextView
                android:id="@+id/login_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_cornor_textview"
                android:backgroundTint="#4C9AD0"
                android:onClick="submit"
                android:paddingHorizontal="25dp"
                android:paddingVertical="10dp"
                android:text="SUBMIT"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>